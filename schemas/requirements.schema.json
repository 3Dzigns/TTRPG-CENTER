{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ttrpg-center.com/schemas/requirements.schema.json",
  "title": "TTRPG Center Requirements Schema",
  "description": "JSON schema for TTRPG Center requirements versioning (US-705)",
  "type": "object",
  "required": ["title", "version", "description", "requirements", "metadata"],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Requirements document title"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Semantic version (e.g., 1.0.0)"
    },
    "description": {
      "type": "string",
      "minLength": 1,
      "maxLength": 2000,
      "description": "Requirements overview description"
    },
    "requirements": {
      "type": "object",
      "required": ["functional", "non_functional"],
      "properties": {
        "functional": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/requirement"
          },
          "minItems": 0,
          "description": "Functional requirements list"
        },
        "non_functional": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/requirement"
          },
          "minItems": 0,
          "description": "Non-functional requirements list"
        },
        "constraints": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/constraint"
          },
          "description": "System constraints"
        },
        "assumptions": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 500
          },
          "description": "Project assumptions"
        }
      },
      "additionalProperties": false
    },
    "stakeholders": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/stakeholder"
      },
      "description": "Project stakeholders"
    },
    "acceptance_criteria": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/acceptance_criterion"
      },
      "description": "High-level acceptance criteria"
    },
    "metadata": {
      "type": "object",
      "required": ["version_id", "author", "timestamp"],
      "properties": {
        "version_id": {
          "type": "integer",
          "minimum": 1,
          "description": "Unique version identifier"
        },
        "author": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100,
          "pattern": "^[a-zA-Z0-9._-]+$",
          "description": "Author username"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp"
        },
        "created_at": {
          "type": "number",
          "description": "Unix timestamp"
        },
        "checksum": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$",
          "description": "SHA-256 checksum for integrity"
        },
        "phase": {
          "type": "integer",
          "minimum": 0,
          "maximum": 7,
          "description": "Development phase number"
        },
        "priority": {
          "type": "string",
          "enum": ["critical", "high", "medium", "low"],
          "description": "Requirements priority"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "definitions": {
    "requirement": {
      "type": "object",
      "required": ["id", "title", "description", "priority"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[A-Z]{2,4}-[0-9]{3,4}$",
          "description": "Requirement ID (e.g., FR-001, NFR-002)"
        },
        "title": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200,
          "description": "Requirement title"
        },
        "description": {
          "type": "string",
          "minLength": 1,
          "maxLength": 2000,
          "description": "Detailed requirement description"
        },
        "priority": {
          "type": "string",
          "enum": ["critical", "high", "medium", "low"],
          "description": "Requirement priority"
        },
        "category": {
          "type": "string",
          "enum": ["security", "performance", "usability", "reliability", "scalability", "functionality", "integration"],
          "description": "Requirement category"
        },
        "acceptance_criteria": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 500
          },
          "description": "Specific acceptance criteria"
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[A-Z]{2,4}-[0-9]{3,4}$"
          },
          "description": "Dependent requirement IDs"
        },
        "risk_level": {
          "type": "string",
          "enum": ["low", "medium", "high", "critical"],
          "description": "Implementation risk assessment"
        },
        "estimate_hours": {
          "type": "integer",
          "minimum": 0,
          "maximum": 1000,
          "description": "Estimated implementation hours"
        }
      },
      "additionalProperties": false
    },
    "constraint": {
      "type": "object",
      "required": ["type", "description"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["technical", "business", "regulatory", "resource", "time"],
          "description": "Constraint type"
        },
        "description": {
          "type": "string",
          "minLength": 1,
          "maxLength": 1000,
          "description": "Constraint description"
        },
        "impact": {
          "type": "string",
          "enum": ["low", "medium", "high", "critical"],
          "description": "Constraint impact level"
        }
      },
      "additionalProperties": false
    },
    "stakeholder": {
      "type": "object",
      "required": ["name", "role", "involvement"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100,
          "description": "Stakeholder name"
        },
        "role": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100,
          "description": "Stakeholder role"
        },
        "involvement": {
          "type": "string",
          "enum": ["primary", "secondary", "reviewer", "informed"],
          "description": "Level of involvement"
        },
        "contact": {
          "type": "string",
          "format": "email",
          "description": "Contact email"
        }
      },
      "additionalProperties": false
    },
    "acceptance_criterion": {
      "type": "object",
      "required": ["id", "description", "test_type"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^AC-[0-9]{3,4}$",
          "description": "Acceptance criterion ID"
        },
        "description": {
          "type": "string",
          "minLength": 1,
          "maxLength": 1000,
          "description": "Criterion description"
        },
        "test_type": {
          "type": "string",
          "enum": ["unit", "functional", "integration", "performance", "security", "usability"],
          "description": "Type of test required"
        },
        "success_criteria": {
          "type": "string",
          "minLength": 1,
          "maxLength": 500,
          "description": "Specific success criteria"
        }
      },
      "additionalProperties": false
    }
  }
}
